{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "downlevelIteration": true
  },
  "include": [
    "src/**/*", "declarations.d.ts"
  ]
}
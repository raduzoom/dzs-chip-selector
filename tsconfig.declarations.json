{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",    // all .d.ts files go here
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*", "declarations.d.ts"
  ]
}